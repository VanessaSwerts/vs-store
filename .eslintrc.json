{
	"env": {
		"es2021": true,
    "node": true,
    "browser": true,
		"jest": true
	},
	"extends": [
		"plugin:react/recommended",
		"standard",
		"prettier/standard",
		"prettier/react"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"react",
		"prettier"
	],
	"rules": {
		"prettier/prettier": "error",
    "space-before-function-paren": "off",
    "react/jsx-filename-extension": [
      "error",
      { "extensions": [".js", ".jsx"] }
    ],
    "react/prop-types": "off"
	}
}
